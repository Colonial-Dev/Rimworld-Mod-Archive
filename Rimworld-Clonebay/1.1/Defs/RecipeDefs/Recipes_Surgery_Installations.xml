<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <RecipeDef ParentName="SurgeryFlesh">
    <defName>ClonebayInstallScanner</defName>
    <label>install neural scanner</label>
    <description>Install a neural scanner.</description>
    <workerClass>Recipe_InstallImplant</workerClass>
    <jobString>Installing neural scanner.</jobString>
    <workAmount>4000</workAmount>
    <deathOnFailedSurgeryChance>0.10</deathOnFailedSurgeryChance>
    <skillRequirements>
      <Medicine>10</Medicine>
    </skillRequirements>
    <researchPrerequisite>
      <li>Clonebay_ScannerImplanting</li>
    </researchPrerequisite>
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>Medicine</li>
          </categories>
        </filter>
        <count>3</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Clonebay_Scanner</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <categories>
        <li>Medicine</li>
      </categories>
      <thingDefs>
        <li>Clonebay_Scanner</li>
      </thingDefs>
    </fixedIngredientFilter>
    <appliedOnFixedBodyParts>
      <li>Brain</li>
    </appliedOnFixedBodyParts>
    <addsHediff>Clonebay_Implant</addsHediff>
  </RecipeDef>
  <RecipeDef>
    <defName>Clonebay_MakeRawBiomass</defName>
    <label>make raw biomass from edible protein</label>
    <description>Make a batch of raw biomass by pulping edible protein.</description>
    <jobString>Refining raw biomass from edible protein.</jobString>
    <effectWorking>Cremate</effectWorking>
    <soundWorking>Recipe_Cremate</soundWorking>
    <recipeUsers>
      <li>BiofuelRefinery</li>
    </recipeUsers>
    <workAmount>2500</workAmount>
    <researchPrerequisite>
      <li>Clonebay_Refine</li>
    </researchPrerequisite>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <allowMixingIngredients>true</allowMixingIngredients>
    <ingredientValueGetterClass>IngredientValueGetter_Nutrition</ingredientValueGetterClass>
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>Foods</li>
            <li>PlantMatter</li>
          </categories>
          <disallowedThingDefs>
            <li>Hay</li>
          </disallowedThingDefs>
          <disallowedCategories>
            <li>FoodMeals</li>
          </disallowedCategories>
        </filter>
        <count>5</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <categories>
        <li>Foods</li>
        <li>PlantMatter</li>
      </categories>
      <disallowedThingDefs>
        <li>Hay</li>
      </disallowedThingDefs>
      <disallowedCategories>
        <li>FoodMeals</li>
      </disallowedCategories>
    </fixedIngredientFilter>
    <defaultIngredientFilter>
      <categories>
        <li>FoodRaw</li>
      </categories>
      <disallowedCategories>
        <li>MeatRaw</li>
        <li>AnimalProductRaw</li>
      </disallowedCategories>
    </defaultIngredientFilter>
    <products>
      <Clonebay_RawBiomass>100</Clonebay_RawBiomass>
    </products>
  </RecipeDef>
</Defs>